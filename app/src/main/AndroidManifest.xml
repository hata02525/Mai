<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fluper.mai">

    <permission
        android:name="com.example.googlemaps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.SignUp"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.CreateProfile"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.EnterOTP"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.ForgetPassword"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.OTPForgetPass"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.Password.NewPassword"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".activity.Home.Home_Activity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity android:name=".activity.ProfileActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".activity.Food_Beverages" />
        <activity android:name=".activity.Home.FavouriteActivity" />
        <activity android:name=".activity.Home.StarActivity" />
        <activity android:name=".activity.ResetPasscode" />
        <activity android:name=".activity.Settings" />
        <activity android:name=".activity.Password.ChangePassword" />
        <activity android:name=".Merchant.Merchant" />
        <activity android:name=".activity.ScannerActivity" />
        <activity android:name=".activity.NotificationActivity" />
        <activity android:name=".Merchant.MerchantRatingActivity"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/carddiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/voucherno."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher no.02(ABCD015)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"/>
            <LinearLayout
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_above="@id/description"
                android:layout_toRightOf="@id/voucherno."
                android:gravity="right"
                android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/infoblue"
                android:text="@string/premium"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/base"
                />
            <ImageView
                android:id="@+id/infoblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info_blue"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_2"
               />
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voucherno."
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toLeftOf="@id/subscribe"
                android:text="Get 1 Free M Pizza for every purchase of 1 Large Pizza"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />
            <Button
                android:id="@+id/subscribe"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/button_background"
                android:layout_alignParentRight="true"
                android:text="Subscribe"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_above="@id/redeemonly"
                android:textAllCaps="false"
                android:layout_below="@id/pre"
                android:textSize="@dimen/sp_10"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/redeemonly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/hintcolor"
                android:text="(Redeemable at our Light Mall Branch Only)"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

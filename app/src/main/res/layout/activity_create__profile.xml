<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_img"
    tools:context="com.example.fluper.mai.activity.CreateProfile">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_above="@id/submit"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_55">

            <TextView
                android:id="@+id/showtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColorHint="@color/hintcolor"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/sp_12"/>

            <ImageView
                android:id="@+id/dropdown"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/drop_down_grey" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@color/base" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/name"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/hintcolor"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_50"
                android:textAlignment="center"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/base"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10">

           <ImageView
               android:id="@+id/flag"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/flag_us"
               android:layout_marginLeft="@dimen/dp_6"/>
            <ImageView
                android:id="@+id/dropdown_country"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/drop_down_grey"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_gravity="center_vertical" />
            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@color/base"/>
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/mobile"
                android:textSize="@dimen/sp_16"
                android:textColorHint="@color/hintcolor"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_50"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/base"/>
        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_10"
            android:focusableInTouchMode="false"
            android:paddingStart="@dimen/dp_10"
            android:singleLine="true"
            android:cursorVisible="false"
            android:textColorHint="@color/hintcolor"
            android:layout_marginLeft="@dimen/dp_10"
            android:hint="@string/dob"
            android:textSize="@dimen/sp_16"
            android:textAlignment="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/base"/>

        <EditText
            android:id="@+id/choosepasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            android:inputType="textPassword"
            android:textColorHint="@color/hintcolor"
            android:layout_marginLeft="@dimen/dp_35"
            android:drawableRight="@drawable/info"
            android:hint="@string/choose"
            android:textAlignment="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/base"/>

        <EditText
            android:id="@+id/confirmpasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColorHint="@color/hintcolor"
            android:textSize="@dimen/sp_16"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_18"
            android:hint="@string/cnfrmpass"
            android:textAlignment="center"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/overlapImage"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_above="@id/layout"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-90dp"
        app:civ_border_width="@dimen/dp_2"
        app:civ_border_color="#069e9e"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_placeholder" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/button_background"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"/>
</RelativeLayout>
